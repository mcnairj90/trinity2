<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.matrixcare.trinity.Activities.MainActivity">

    <FrameLayout
        android:id="@+id/caregiver_container"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:id="@+id/caregiver_image"
                >
            </ImageView>
            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/caregiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_toRightOf="@id/caregiver_image"
                />
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/schedule_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below = "@+id/caregiver_container"
        >
    </FrameLayout>

</RelativeLayout>
